@model IEnumerable<Codisa.Infrastructure.ParamsDTO.EmpleadoHabilidadDto>
@{
    ViewData["Title"] = "DetailSkill";
}
<h1>Habilidades del empleado @ViewBag.NombreEmpleado</h1>
<p>
    @Html.ActionLink("Agregar habilidad", "NewEmployeeSkill")
</p>

<input type="text" class="form-control form-control-sm m-b-xs" id="filter"
       placeholder="Filter ...">
<table class="footable table table-stripped" id="table" data-page-size="5" data-filter=#filter>
    <thead>
        <tr>
            <th>
                Habilidad
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreHabilidad)
                </td>
                <td>
                    @Html.ActionLink("Eliminar", "DeleteEmployeeSkill", new { id = item.IdHabilidad })
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="7">
                <ul class="pagination float-right"></ul>
            </td>
        </tr>
    </tfoot>
</table>
